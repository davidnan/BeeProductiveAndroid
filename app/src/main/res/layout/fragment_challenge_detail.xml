<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/honey_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <include layout="@layout/back_arrow" />



        <TextView
            android:id="@+id/challengeLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level: Medium"
            android:textColor="@color/brown"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/challengeUsersCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Users: 23"
            android:textColor="@color/brown"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/challengeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of the challenge goes here."
            android:textColor="@color/brown"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>
