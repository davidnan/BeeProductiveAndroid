<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Group title -->
        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:fontFamily="@font/libre_baskerville_bold" />

        <!-- Group code (small / secondary) -->
        <TextView
            android:id="@+id/tvGroupCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code: ABC123"
            android:layout_marginTop="4dp"
            android:textColor="@color/brown"
            android:fontFamily="@font/libre_baskerville_regular" />

        <!-- Users count (same position as challenge users) -->
        <TextView
            android:id="@+id/tvGroupUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Users: 3"
            android:layout_marginTop="8dp"
            android:textColor="@color/brown"
            android:fontFamily="@font/libre_baskerville_regular" />

        <!-- Action button aligned to end, styled like challenge card -->
        <Button
            android:id="@+id/btnViewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/honey_button"
            android:textColor="@color/brown"
            android:fontFamily="@font/libre_baskerville_bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
