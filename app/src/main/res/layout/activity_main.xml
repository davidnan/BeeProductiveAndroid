<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#fff4c7"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/topContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/boldTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/libre_baskerville_regular"
            android:gravity="center"
            android:text="Welcome to"
            android:textColor="#997d47"
            android:textSize="24sp" />

        <com.beeproductive.android.LogoTextView
            android:id="@+id/logo"
            android:layout_width="362dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/libre_baskerville_regular"
            android:textSize="50sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/beeLogo"
        android:layout_width="391dp"
        android:layout_height="137dp"
        android:layout_marginBottom="368dp"
        android:contentDescription="Bee logo"
        android:orientation="vertical"
        android:scaleType="centerInside"
        android:src="@drawable/bees"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/topContainer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.beeproductive.android.BoldWordTextView
        android:id="@+id/boldTextView"
        android:layout_width="295dp"
        android:layout_height="36dp"
        android:layout_marginTop="328dp"
        android:text="Grow your hive and earn honey by staying screen-free — all with your friends!"
        android:textColor="#6b4701"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.beeproductive.android.BoldWordTextView
        android:id="@+id/boldTextView2"
        android:layout_width="314dp"
        android:layout_height="44dp"
        android:layout_marginTop="228dp"
        android:text="Reduce screen time, boost focus, and build healthy habits— together!"
        android:textColor="#6b4701"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topContainer" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleSignInBtn"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:backgroundTint="#f8c800"
            android:paddingStart="16dp"
            android:paddingEnd="24dp"
            android:gravity="center_vertical"
            android:text="Sign in with Google"
            android:textColor="#6b4701"
            app:icon="@drawable/google_logo"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@null" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
