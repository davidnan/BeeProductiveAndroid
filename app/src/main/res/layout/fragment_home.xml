<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/honey_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">
    <!-- Logo -->
    <ImageView
        android:layout_marginTop="32dp"
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:contentDescription="Logo" />


    <TextView
        android:layout_marginTop="48dp"
        android:id="@+id/welcomeText"
        android:fontFamily="@font/libre_baskerville_bold"
        android:text="Welcome back, Max!"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_marginTop="22dp"
        android:id="@+id/subText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/libre_baskerville_regular"
        android:gravity="center"
        android:text="Your hive grew by X bees yesterday — great job!"
        android:textColor="@color/brown2"
        android:textSize="20sp" />




    <!-- Footer text -->
    <Button
        android:layout_marginTop="180dp"
        android:layout_marginBottom="32dp"
        android:id="@+id/makeHoneyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/honey_yellow"
        android:padding="16dp"
        android:text="MAKE MORE HONEY"
        android:textColor="@color/brown" />

    <TextView
        android:text="Your hive is growing — every minute offline counts"
        android:textSize="17sp"
        android:fontFamily="@font/libre_baskerville_regular"
        android:textColor="@color/brown3"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>