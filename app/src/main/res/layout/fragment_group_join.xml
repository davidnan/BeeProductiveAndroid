<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/honey_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <include layout="@layout/back_arrow" />

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <!-- Centered title -->
        <TextView
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join"
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="28sp"
            android:fontFamily="@font/libre_baskerville_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group"
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="28sp"
            android:fontFamily="@font/libre_baskerville_bold"/>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <!-- Group code label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GROUP CODE"
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="12sp"
            android:letterSpacing="0.15"
            android:fontFamily="@font/libre_baskerville_bold"/>

        <!-- Input -->
        <EditText
            android:id="@+id/inputGroupCode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_input"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:hint="123-456"
            android:inputType="text"
            android:importantForAutofill="no"
            android:textColor="@color/brown"
            android:textSize="16sp"
            android:fontFamily="@font/libre_baskerville_regular"/>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <!-- Button -->
        <Button
            android:id="@+id/btnJoinGroup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="JOIN GROUP"
            android:textAllCaps="true"
            android:backgroundTint="@color/honey_button"
            android:textColor="@color/brown"
            android:fontFamily="@font/libre_baskerville_bold"/>

    </LinearLayout>
</ScrollView>
